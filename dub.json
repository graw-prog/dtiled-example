      "excludedSourceFiles": ["src/backend/dgame.d"],
      "dependencies": {
        "allegro": "==2.0.3+5.0.10",
        "dtiled": { "path": "../dtiled" }
      },
      "subConfigurations": {
        "allegro": "all-addons"
      }
    }
  ]
